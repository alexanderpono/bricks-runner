{
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "edge": "17",
            "firefox": "60",
            "chrome": "67",
            "safari": "11.1"
          },
          "debug": false
        }
      ],
      "@babel/typescript",
      "@babel/preset-react"
    ],
    "plugins": [
        ["@babel/plugin-proposal-class-properties"],
      [
          "module-resolver",
          {
              "alias": {
                  "@src": "./src",
                  "@": "./"
                }
          }
      ]
  ]

}